@model List<TechBlog.Models.Post>


<div class="container">
    <h2>Pending Blog Posts</h2>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
               
                <th>Title</th>
                <th>Content</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr id="post-@post.Id">
                   
                    <td>@post.Title</td>
                    <td>@post.Content</td> 
                    <td>
                        <button type="button" class="btn btn-success approveButton" data-id="@post.Id">Approve</button>
                        <button type="button" class="btn btn-danger deleteButton" data-id="@post.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.approveButton').click(function () {
                var postId = $(this).data('id');
                if (confirm("Are you sure you want to approve this post?")) {
                    $.ajax({
                        url: 'ApprovePost',
                        type: 'POST',
                        data: { id: postId },
                        success: function (response) {
                            if (response.success) {
                                alert("Post approved successfully!");
                                $(`#post-${postId}`).remove();
                            } else {
                                alert("An error occurred while approving the post.");
                            }
                        },
                        error: function () {
                            alert("An error occurred.");
                        }
                    });
                }
            });


            $('.deleteButton').click(function () {
                var postId = $(this).data('id');

                if (confirm("Are you sure you want to delete this post?")) {
                    $.ajax({
                        url: 'DeletePost',
                        type: 'POST',
                        data: { id: postId },
                        success: function (response) {
                            if (response.success) {
                                alert("Post deleted successfully!");
                                $(`#post-${postId}`).remove();
                            } else {
                                alert("An error occurred while deleting the post.");
                            }
                        },
                        error: function () {
                            alert("An error occurred.");
                        }
                    });
                }
            });

        });
    </script>
}