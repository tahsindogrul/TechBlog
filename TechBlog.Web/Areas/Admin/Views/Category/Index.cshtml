 @model List<TechBlog.Models.Category>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Categories</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">Add New Category</button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr id="category-@category.Id">
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                   
                    <td>
                        <button type="button" class=" btn btn-danger deletebutton" data-id="@category.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add Category Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addCategoryForm">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Category</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>


        $(document).ready(function () {
            $('#addCategoryForm').submit(function (e) {
                e.preventDefault();

                var categoryName = $('#categoryName').val();

                $.ajax({
                    url: 'AddCategory',
                    type: 'POST',
                    data: {
                        Name: categoryName
                    },
                    success: function (response) {
                        if (response.success) {
                            var newRow = `
                                        <tr id="category-${response.id}">
                                            <td>${response.id}</td>
                                            <td>${categoryName}</td>
                                            
                                            <td>
                                                <button type="button" class="btn btn-danger deletebutton" data-id="${response.id}">Delete</button>
                                            </td>
                                        </tr>
                                    `;

                            
                            $('table tbody').append(newRow);

                            alert("Category added successfully!");
                            $('#categoryName').val(''); 
                            $('#addCategoryModal').modal('hide'); 
                        } else {
                            alert("An error occurred while adding the category.");
                        }
                    },
                    error: function () {
                        alert("An error occurred.");
                    }
                });
            });



            $('.deletebutton').click(function () {

                var categoryId = $(this).data('id');

                if (confirm("Are you sure you want to delete this category")) { 

                    $.ajax({
                        url: 'DeleteCategory',
                        type: 'POST',
                        data: { id: categoryId },
                        success: function (response) {
                            if (response.success) {
                                alert("Category successfully deleted");
                                $(`#category-${response.id}`).remove();

                            }
                            else {
                                alert("An error occurred while deleting the category !")
                            }
                        },
                        error: function () {
                            alert("An error occurred.");
                        }
                    });
                }

            });

        });
    </script>
}